<div id="<%= dom_id task %>">
  
  <div class="jumbotron jumbotron-fluid">
    <h1 class="display-4"><%= task.title %></h1>
    <p class="lead">Status: <%= task.status %></p>    
    <hr class="my-4">
    <p class="lead"><%= task.description %></p>
    <%= link_to "Back to tasks", root_path, class:"btn btn-secondary"%>
    <%= link_to "Edit", edit_task_path(task), class:"btn btn-secondary"%>
    <%= link_to "Delete", task, data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-secondary"%>  
  </div>
</div>