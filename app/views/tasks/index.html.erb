<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <table class="table">
    <thead>
      <tr class="table-dark">
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title%></td>
        <td><%= task.description%></td>
        <td><%= task.status%></td>
        <td><%= link_to "Show", task, class:"btn btn-secondary"%></td>
        <td><%= link_to "Edit", edit_task_path(task), class:"btn btn-secondary"%></td>
        <td><%= link_to "Delete", task, data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-secondary"%></td>
      </tr> 
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New task", new_task_path, class:"btn btn-secondary"%>